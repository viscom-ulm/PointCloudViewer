LookAt ${CAM_POS}  # eye
       0 0 0  # look at point
       ${CAM_UP}    # up vector
Camera "perspective" "float fov" ${CAM_FOV}

Sampler "halton" "integer pixelsamples" 128
Integrator ${INTEGRATOR_NAME}
Film "image" "string filename" ${PBRT_FN} "integer xresolution" [${XRES}] "integer yresolution" [${YRES}]

WorldBegin

LightSource "point" "rgb I" [${LIGHT_STRENGTH}] "point from" [${LIGHT_POS}]

${MODELS}

WorldEnd
